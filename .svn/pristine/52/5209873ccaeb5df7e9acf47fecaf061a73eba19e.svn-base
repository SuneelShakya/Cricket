{
    text-align: center;
}
@media screen and (max-width: 680px) {
    .ResponsivetableCss {
                  border: 0;
              }
              
                  .ResponsivetableCss caption {
                      font-size: 1em;
                  }
                  .ResponsivetableCss thead {
                      border: none;
                      clip: rect(0 0 0 0);
                      height: 1px;
                      margin: -1px;
                      overflow: hidden;
                      padding: 0;
                      position: absolute;
                      width: 1px;
                  }

                  .ResponsivetableCss tr {
                      /* border-bottom: 3px solid #ddd; */
                      display: block;
                      margin-bottom: .625em;
                      align-self: auto;
                  }

                  .ResponsivetableCss td {
                      /* border-bottom: 1px solid #ddd; */
                      display: block;
                      font-size: .9em;
                      text-align: right;
                      width: 100%;
                  }

                      .ResponsivetableCss td::before {
                          content: attr(data-label);
                          float: left;
                          font-weight: normal;
                          text-transform: uppercase;
                          vertical-align: middle;
                      }
                      .ResponsivetableCss td:last-child {
                          border-bottom: 0;
                      }
          }

